{
  "title": "Facebook Group Auto Poster",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "Facebook_Profile_URL": {
      "title": "Facebook Group URL List (Comma-separated)",
      "type": "string",
      "description": "List of Facebook group URLs separated by commas.",
      "editor": "textarea"
    },
    "Message": {
      "title": "Enter Your Message",
      "type": "string",
      "description": "The text content of the post."
    },
    "Delay": {
      "title": "Delay (Seconds)",
      "type": "integer",
      "description": "Delay between posts (in seconds).",
      "default": 15
    },
    "Cookies": {
      "title": "Facebook Cookie (Optional)",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "domain": { "type": "string" },
          "expirationDate": { "type": "number" },
          "hostOnly": { "type": "boolean" },
          "httpOnly": { "type": "boolean" },
          "name": { "type": "string" },
          "path": { "type": "string" },
          "sameSite": { "type": "string" },
          "secure": { "type": "boolean" },
          "session": { "type": "boolean" },
          "storeId": { "type": ["string", "null"] },
          "value": { "type": "string" }
        }
      },
      "description": "Paste your Facebook session cookies here (if needed)."
    }
  },
  "required": ["Facebook_Profile_URL", "Message"]
}
